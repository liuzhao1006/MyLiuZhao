<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <include layout="@layout/include_top" />


    <com.sx.trans.widget.view.LzScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_70_dip"

                android:layout_marginRight="@dimen/dimen_10_dip"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_10_dip">

                <ImageView
                    android:layout_marginRight="@dimen/dimen_5_dip"
                    android:layout_width="@dimen/dimen_32_dip"
                    android:layout_height="@dimen/dimen_32_dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/vehicle" />

                <com.sx.trans.widget.font.LzTextView
                    android:id="@+id/tv_UseName"
                    style="@style/Ledger_Text_Style"
                    android:text="车辆信息" />
            </LinearLayout>
            <View
                android:layout_marginRight="@dimen/dimen_10_dip"
                android:layout_marginLeft="@dimen/dimen_10_dip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:background="#eeeeee" />

            <LinearLayout style="@style/linearlayout">

                <com.sx.trans.widget.font.LzTextView
                    style="@style/lztextview"
                    android:gravity="center_vertical"
                    android:text="车牌号" />

                <com.sx.trans.widget.font.LzTextView
                    android:id="@+id/ltv_name"
                    style="@style/lztextview_content"
                    android:gravity="center_vertical|right"
                    android:text="-" />

            </LinearLayout>

            <View
                android:layout_marginRight="@dimen/dimen_10_dip"
                android:layout_marginLeft="@dimen/dimen_47_dip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:background="#eeeeee"  />


            <LinearLayout style="@style/linearlayout">

                <com.sx.trans.widget.font.LzTextView
                    style="@style/lztextview"
                    android:gravity="center_vertical"
                    android:text="车架号" />

                <com.sx.trans.widget.font.LzTextView
                    android:id="@+id/ltv_type"
                    style="@style/lztextview_content"
                    android:gravity="center_vertical|right"
                    android:text="-" />

            </LinearLayout>

            <View
                android:layout_marginRight="@dimen/dimen_10_dip"
                android:layout_marginLeft="@dimen/dimen_47_dip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:background="#eeeeee"  />



            <LinearLayout style="@style/linearlayout">

                <com.sx.trans.widget.font.LzTextView
                    style="@style/lztextview"
                    android:gravity="center_vertical"
                    android:text="所属机构" />

                <com.sx.trans.widget.font.LzTextView
                    android:id="@+id/ltv_xingtai"
                    style="@style/lztextview_content"
                    android:gravity="center|right"
                    android:text="-" />

            </LinearLayout>
            <View

                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_20_dip"
                android:background="#eeeeee"  />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_70_dip"

                android:layout_marginRight="@dimen/dimen_10_dip"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_10_dip">

                <ImageView
                    android:layout_marginRight="@dimen/dimen_5_dip"
                    android:layout_width="@dimen/dimen_32_dip"
                    android:layout_height="@dimen/dimen_32_dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/maintenanceinformation" />

                <com.sx.trans.widget.font.LzTextView
                    style="@style/Ledger_Text_Style"
                    android:text="维修保养信息" />
            </LinearLayout>

            <View
                android:layout_marginRight="@dimen/dimen_10_dip"
                android:layout_marginLeft="@dimen/dimen_10_dip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:background="#eeeeee" />
            <LinearLayout style="@style/linearlayout">

                <com.sx.trans.widget.font.LzTextView
                    style="@style/lztextview"
                    android:gravity="center_vertical"
                    android:text="维护日期" />

                <com.sx.trans.widget.font.LzTextView
                    android:id="@+id/ltv_time"
                    style="@style/lztextview_content"
                    android:gravity="center|right"
                    android:text="-" />

            </LinearLayout>

            <View
                android:layout_marginRight="@dimen/dimen_10_dip"
                android:layout_marginLeft="@dimen/dimen_47_dip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:background="#eeeeee"  />


            <LinearLayout style="@style/linearlayout">

                <com.sx.trans.widget.font.LzTextView
                    style="@style/lztextview"
                    android:gravity="center_vertical"
                    android:text="下次维护日期" />

                <com.sx.trans.widget.font.LzTextView
                    android:id="@+id/ltv_address"
                    style="@style/lztextview_content"
                    android:gravity="center|right"
                    android:text="-" />

            </LinearLayout>

            <View
                android:layout_marginRight="@dimen/dimen_10_dip"
                android:layout_marginLeft="@dimen/dimen_47_dip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:background="#eeeeee"  />

            <LinearLayout style="@style/linearlayout">

                <com.sx.trans.widget.font.LzTextView
                    style="@style/lztextview"
                    android:gravity="center_vertical"
                    android:text="营运公里数" />

                <com.sx.trans.widget.font.LzTextView
                    android:id="@+id/ltv_sky"
                    style="@style/lztextview_content"
                    android:gravity="center|right"
                    android:text="-" />

            </LinearLayout>

            <View
                android:layout_marginRight="@dimen/dimen_10_dip"
                android:layout_marginLeft="@dimen/dimen_47_dip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:background="#eeeeee"  />

            <LinearLayout style="@style/linearlayout">

                <com.sx.trans.widget.font.LzTextView
                    style="@style/lztextview"
                    android:gravity="center_vertical"
                    android:text="维护单位" />

                <com.sx.trans.widget.font.LzTextView
                    android:id="@+id/ltv_grade"
                    style="@style/lztextview_content"
                    android:gravity="center|right"
                    android:text="-" />

            </LinearLayout>

            <View
                android:layout_marginRight="@dimen/dimen_10_dip"
                android:layout_marginLeft="@dimen/dimen_47_dip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:background="#eeeeee"  />

            <LinearLayout style="@style/linearlayout">

                <com.sx.trans.widget.font.LzTextView
                    style="@style/lztextview"
                    android:gravity="center_vertical"
                    android:text="维修合同编号" />

                <com.sx.trans.widget.font.LzTextView
                    android:id="@+id/ltv_situation"
                    style="@style/lztextview_content"
                    android:gravity="center|right"
                    android:text="-" />

            </LinearLayout>

            <View
                android:layout_marginRight="@dimen/dimen_10_dip"
                android:layout_marginLeft="@dimen/dimen_47_dip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:background="#eeeeee"  />

            <LinearLayout style="@style/linearlayout">

                <com.sx.trans.widget.font.LzTextView
                    style="@style/lztextview"
                    android:gravity="center_vertical"
                    android:text="合格证号码" />

                <com.sx.trans.widget.font.LzTextView
                    android:id="@+id/ltv_lmzk"
                    style="@style/lztextview_content"
                    android:gravity="center|right"
                    android:text="-" />

            </LinearLayout>

            <View
                android:layout_marginRight="@dimen/dimen_10_dip"
                android:layout_marginLeft="@dimen/dimen_47_dip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:background="#eeeeee"  />

            <LinearLayout style="@style/linearlayout">

                <com.sx.trans.widget.font.LzTextView
                    style="@style/lztextview"
                    android:gravity="center_vertical"
                    android:text="检测编号" />

                <com.sx.trans.widget.font.LzTextView
                    android:id="@+id/ltv_zjyy"
                    style="@style/lztextview_content"
                    android:gravity="center|right"
                    android:text="-" />

            </LinearLayout>

            <View
                android:layout_marginRight="@dimen/dimen_10_dip"
                android:layout_marginLeft="@dimen/dimen_47_dip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:background="#eeeeee"  />

            <LinearLayout style="@style/linearlayout">

                <com.sx.trans.widget.font.LzTextView
                    style="@style/lztextview"
                    android:gravity="center_vertical"
                    android:text="是否合格" />

                <com.sx.trans.widget.font.LzTextView
                    android:id="@+id/ltv_jsy"
                    style="@style/lztextview_content"
                    android:gravity="center|right"
                    android:text="-" />

            </LinearLayout>

            <View
                android:layout_marginRight="@dimen/dimen_10_dip"
                android:layout_marginLeft="@dimen/dimen_47_dip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:background="#eeeeee"  />

            <LinearLayout style="@style/linearlayout">

                <com.sx.trans.widget.font.LzTextView
                    style="@style/lztextview"
                    android:gravity="center_vertical"
                    android:text="运管备案日期" />

                <com.sx.trans.widget.font.LzTextView
                    android:id="@+id/ltv_cyzglb"
                    style="@style/lztextview_content"
                    android:gravity="center|right"
                    android:text="-" />

            </LinearLayout>

            <View
                android:layout_marginRight="@dimen/dimen_10_dip"
                android:layout_marginLeft="@dimen/dimen_47_dip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:background="#eeeeee"  />

            <LinearLayout style="@style/linearlayout">

                <com.sx.trans.widget.font.LzTextView
                    style="@style/lztextview"
                    android:gravity="center_vertical"
                    android:text="主要附加作业项目" />

                <com.sx.trans.widget.font.LzTextView
                    android:id="@+id/ltv_cyzgzh"
                    style="@style/lztextview_content"
                    android:gravity="center|right"
                    android:text="-" />

            </LinearLayout>

            <View
                android:layout_marginRight="@dimen/dimen_10_dip"
                android:layout_marginLeft="@dimen/dimen_47_dip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:background="#eeeeee"  />

            <LinearLayout style="@style/linearlayout">

                <com.sx.trans.widget.font.LzTextView
                    style="@style/lztextview"
                    android:gravity="center_vertical"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:clickable="true"
                    android:text="总成及主要零部件更换" />

                <com.sx.trans.widget.font.LzTextView
                    android:id="@+id/ltv_cph"
                    style="@style/lztextview_content"
                    android:gravity="center|right"
                    android:text="-" />

            </LinearLayout>
            <View
                android:layout_marginRight="@dimen/dimen_10_dip"
                android:layout_marginLeft="@dimen/dimen_47_dip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:background="#eeeeee"  />

            <LinearLayout style="@style/linearlayout">

                <com.sx.trans.widget.font.LzTextView
                    style="@style/lztextview"
                    android:gravity="center_vertical"
                    android:text="备注" />

                <com.sx.trans.widget.font.LzTextView
                    android:id="@+id/ltv_yszh"
                    style="@style/lztextview_content"
                    android:gravity="center|right"
                    android:text="-" />

            </LinearLayout>







        </LinearLayout>
    </com.sx.trans.widget.view.LzScrollView>

</LinearLayout>
