<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:focusableInTouchMode="true"
    android:keepScreenOn="true"
    android:orientation="vertical" >

    <include layout="@layout/head_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2">
        <com.amap.api.maps.TextureMapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ></com.amap.api.maps.TextureMapView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <RelativeLayout
                android:id="@+id/first_video_view_rl"
                android:layout_width="0dp"
                android:layout_margin="1dp"
                android:background="@color/blackcolor"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

                <VideoView
                    android:id="@+id/first_video_view"
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/bt_play1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/video_play" />
                <ProgressBar
                    android:id="@+id/first_progressBar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:indeterminateDrawable="@drawable/video_progress"
                    android:visibility="gone" />

            </RelativeLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/gray_f5" />

            <RelativeLayout
                android:layout_margin="1dp"
                android:id="@+id/second_video_view_rl"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/blackcolor"
                android:layout_weight="1" >

                <VideoView
                    android:id="@+id/second_video_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                     />


                <Button
                    android:id="@+id/bt_play2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/video_play" />

                <ProgressBar
                    android:indeterminateDrawable="@drawable/video_progress"
                    android:id="@+id/second_progressBar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_f5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_margin="1dp"
                android:id="@+id/third_video_view_rl"
                android:layout_width="0dp"
                android:background="@color/blackcolor"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <VideoView
                    android:id="@+id/third_video_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                   />

                <Button
                    android:id="@+id/bt_play3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/video_play" />

                <ProgressBar
                    android:id="@+id/third_progressBar"
                    android:indeterminateDrawable="@drawable/video_progress"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/gray_f5" />

            <RelativeLayout
                android:layout_margin="1dp"
                android:id="@+id/fourth_video_view_rl"
                android:layout_width="0dp"
                android:background="@color/blackcolor"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <VideoView
                    android:id="@+id/fourth_video_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    />

                <Button
                    android:id="@+id/bt_play4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/video_play" />

                <ProgressBar
                    android:id="@+id/fourth_progressBar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:indeterminateDrawable="@drawable/video_progress"
                    android:layout_centerInParent="true"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>