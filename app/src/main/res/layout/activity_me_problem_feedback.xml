<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dimen_10_dip"
        android:paddingLeft="@dimen/dimen_5_dip"
        android:paddingRight="@dimen/dimen_5_dip"
        android:paddingTop="@dimen/dimen_10_dip">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_60_dip"
            android:layout_marginLeft="@dimen/dimen_5_dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.sx.trans.widget.font.LzTextView
                style="@style/Ledger_Text_Style"
                android:text="标题" />
        </LinearLayout>

        <com.sx.trans.widget.font.LzTextView
            android:id="@+id/tv_CarNum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="center_vertical"
            android:padding="@dimen/dimen_10_dip"
            android:text="(2017年09月10日)"
            android:textColor="@color/maintvno_bg"
            android:textSize="15sp"
            android:visibility="gone" />

        <com.sx.trans.widget.font.LzTextView
            android:id="@+id/tv_carResult"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="right"
            android:padding="@dimen/dimen_10_dip"
            android:text="安全问题反应"
            android:textColor="#5EB868"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_5_dip"
        android:background="@color/view_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_5_dip"
        android:paddingRight="@dimen/dimen_5_dip"
        android:paddingTop="@dimen/dimen_10_dip">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_60_dip"
            android:layout_marginLeft="@dimen/dimen_5_dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.sx.trans.widget.font.LzTextView
                style="@style/Ledger_Text_Style"
                android:text="描述" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10_dip"
            android:background="@drawable/shape_green"
            android:orientation="vertical"
            android:padding="@dimen/dimen_10_dip">

            <android.support.design.widget.TextInputEditText

                android:id="@+id/et_feed_back_content"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:background="@android:color/transparent"
                android:gravity="top"
                android:hint="请输入内容"
                android:paddingBottom="14.0dp"
                android:paddingLeft="12.0dp"
                android:paddingTop="12.0dp"
                android:singleLine="false"
                android:textSize="16sp" />


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:background="@color/view_line"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/bt_myoutbutton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40_dip"
            android:layout_marginBottom="@dimen/dimen_20_dip"
            android:layout_marginLeft="@dimen/dimen_20_dip"
            android:layout_marginRight="@dimen/dimen_20_dip"
            android:layout_marginTop="@dimen/dimen_60_dip"
            android:background="@drawable/select_query_bg"
            android:text="确认处理"
            android:textColor="@color/white"
            android:textSize="20sp" />


    </LinearLayout>


</LinearLayout>
