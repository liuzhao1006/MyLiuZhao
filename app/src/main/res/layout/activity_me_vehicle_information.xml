<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <include layout="@layout/include_top" />


    <com.sx.trans.widget.view.LzScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_70_dip"

                android:layout_marginRight="@dimen/dimen_10_dip"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_10_dip">

                <ImageView
                    android:layout_marginRight="@dimen/dimen_5_dip"
                    android:layout_width="@dimen/dimen_32_dip"
                    android:layout_height="@dimen/dimen_32_dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/vehicle" />

                <com.sx.trans.widget.font.LzTextView
                    android:id="@+id/tv_UseName"
                    style="@style/Ledger_Text_Style"
                    android:text="车辆信息" />
            </LinearLayout>

            <View
                android:layout_marginRight="@dimen/dimen_10_dip"
                android:layout_marginLeft="@dimen/dimen_10_dip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:background="#eeeeee" />

            <LinearLayout style="@style/linearlayout">

                <com.sx.trans.widget.font.LzTextView
                    style="@style/lztextview"
                    android:gravity="center_vertical"
                    android:text="车牌号" />

                <com.sx.trans.widget.font.LzTextView
                    android:id="@+id/ltv_cyzglb"
                    style="@style/lztextview_content"
                    android:gravity="center|right"
                    android:text="-" />

            </LinearLayout>

            <View
                android:layout_marginRight="@dimen/dimen_10_dip"
                android:layout_marginLeft="@dimen/dimen_47_dip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:background="#eeeeee" />
            <LinearLayout style="@style/linearlayout">

                <com.sx.trans.widget.font.LzTextView
                    style="@style/lztextview"
                    android:gravity="center_vertical"
                    android:text="车辆使用年限" />

                <com.sx.trans.widget.font.LzTextView
                    android:id="@+id/ltv_name"
                    style="@style/lztextview_content"
                    android:gravity="center_vertical|right"
                    android:text="-" />

            </LinearLayout>

            <View
                android:layout_marginRight="@dimen/dimen_10_dip"
                android:layout_marginLeft="@dimen/dimen_47_dip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:background="#eeeeee" />

            <LinearLayout style="@style/linearlayout">

                <com.sx.trans.widget.font.LzTextView
                    style="@style/lztextview"
                    android:gravity="center_vertical"
                    android:text="车牌颜色" />

                <com.sx.trans.widget.font.LzTextView
                    android:id="@+id/ltv_type"
                    style="@style/lztextview_content"
                    android:gravity="center_vertical|right"
                    android:text="-" />

            </LinearLayout>

            <View
                android:layout_marginRight="@dimen/dimen_10_dip"
                android:layout_marginLeft="@dimen/dimen_47_dip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:background="#eeeeee" />

            <LinearLayout style="@style/linearlayout">

                <com.sx.trans.widget.font.LzTextView
                    style="@style/lztextview"
                    android:gravity="center_vertical"
                    android:text="车辆类型" />

                <com.sx.trans.widget.font.LzTextView
                    android:id="@+id/ltv_xingtai"
                    style="@style/lztextview_content"
                    android:gravity="center|right"
                    android:text="-" />

            </LinearLayout>

            <View
                android:layout_marginRight="@dimen/dimen_10_dip"
                android:layout_marginLeft="@dimen/dimen_47_dip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:background="#eeeeee" />

            <LinearLayout style="@style/linearlayout">

                <com.sx.trans.widget.font.LzTextView
                    style="@style/lztextview"
                    android:gravity="center_vertical"
                    android:text="行驶证下次到期时间" />

                <com.sx.trans.widget.font.LzTextView
                    android:id="@+id/ltv_time"
                    style="@style/lztextview_content"
                    android:gravity="center|right"
                    android:text="-" />

            </LinearLayout>

            <View
                android:layout_marginRight="@dimen/dimen_10_dip"
                android:layout_marginLeft="@dimen/dimen_47_dip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:background="#eeeeee" />

            <LinearLayout style="@style/linearlayout">

                <com.sx.trans.widget.font.LzTextView
                    style="@style/lztextview"
                    android:gravity="center_vertical"
                    android:text="道路运输证下次到期时间" />

                <com.sx.trans.widget.font.LzTextView
                    android:id="@+id/ltv_address"
                    style="@style/lztextview_content"
                    android:gravity="center|right"
                    android:text="-" />

            </LinearLayout>

            <View
                android:layout_marginRight="@dimen/dimen_10_dip"
                android:layout_marginLeft="@dimen/dimen_47_dip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:background="#eeeeee" />

            <LinearLayout style="@style/linearlayout">

                <com.sx.trans.widget.font.LzTextView
                    style="@style/lztextview"
                    android:gravity="center_vertical"
                    android:text="线路牌年审有效期" />

                <com.sx.trans.widget.font.LzTextView
                    android:id="@+id/ltv_sky"
                    style="@style/lztextview_content"
                    android:gravity="center|right"
                    android:text="-" />

            </LinearLayout>

            <View
                android:layout_marginRight="@dimen/dimen_10_dip"
                android:layout_marginLeft="@dimen/dimen_47_dip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:background="#eeeeee" />
            <LinearLayout style="@style/linearlayout">

                <com.sx.trans.widget.font.LzTextView
                    style="@style/lztextview"
                    android:gravity="center_vertical"
                    android:text="车辆下次维护日期" />

                <com.sx.trans.widget.font.LzTextView
                    android:id="@+id/ltv_grade"
                    style="@style/lztextview_content"
                    android:gravity="center|right"
                    android:text="-" />

            </LinearLayout>

            <View
                android:layout_marginRight="@dimen/dimen_10_dip"
                android:layout_marginLeft="@dimen/dimen_47_dip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:background="#eeeeee" />

            <LinearLayout style="@style/linearlayout">

                <com.sx.trans.widget.font.LzTextView
                    style="@style/lztextview"
                    android:gravity="center_vertical"
                    android:text="所属单位" />

                <com.sx.trans.widget.font.LzTextView
                    android:id="@+id/ltv_situation"
                    style="@style/lztextview_content"
                    android:gravity="center|right"
                    android:text="-" />

            </LinearLayout>

            <View
                android:layout_marginRight="@dimen/dimen_10_dip"
                android:layout_marginLeft="@dimen/dimen_47_dip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:background="#eeeeee" />

            <LinearLayout style="@style/linearlayout">

                <com.sx.trans.widget.font.LzTextView
                    style="@style/lztextview"
                    android:gravity="center_vertical"
                    android:text="核载人数" />

                <com.sx.trans.widget.font.LzTextView
                    android:id="@+id/ltv_lmzk"
                    style="@style/lztextview_content"
                    android:gravity="center|right"
                    android:text="-" />

            </LinearLayout>

            <View
                android:layout_marginRight="@dimen/dimen_10_dip"
                android:layout_marginLeft="@dimen/dimen_47_dip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:background="#eeeeee" />

            <LinearLayout style="@style/linearlayout">

                <com.sx.trans.widget.font.LzTextView
                    style="@style/lztextview"
                    android:gravity="center_vertical"
                    android:text="核载吨数" />

                <com.sx.trans.widget.font.LzTextView
                    android:id="@+id/ltv_zjyy"
                    style="@style/lztextview_content"
                    android:gravity="center|right"
                    android:text="-" />

            </LinearLayout>

            <View
                android:layout_marginRight="@dimen/dimen_10_dip"
                android:layout_marginLeft="@dimen/dimen_47_dip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:background="#eeeeee" />

            <LinearLayout style="@style/linearlayout">

                <com.sx.trans.widget.font.LzTextView
                    style="@style/lztextview"
                    android:gravity="center_vertical"
                    android:text="班线名称" />

                <com.sx.trans.widget.font.LzTextView
                    android:id="@+id/ltv_jsy"
                    style="@style/lztextview_content"
                    android:gravity="center|right"
                    android:text="-" />

            </LinearLayout>


        </LinearLayout>

    </com.sx.trans.widget.view.LzScrollView>

</LinearLayout>
