<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80_dip"

        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_10_dip">

        <View
            android:layout_width="@dimen/dimen_3_dip"
            android:layout_height="@dimen/dimen_15_dip"
            android:layout_marginRight="@dimen/dimen_10_dip"
            android:background="@color/home_textblue" />

        <com.sx.trans.widget.font.LzTextView
            android:id="@+id/ll_accident_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/material_black"
            android:singleLine="true"
            android:text="事故名称"
            android:textSize="15sp" />

        <com.sx.trans.widget.font.LzTextView
            android:id="@+id/ll_accident_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@color/white"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:text="(2017-09-09)"
            android:textColor="#999999"
            android:textSize="13sp" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dip"
        android:layout_marginLeft="@dimen/dimen_10_dip"
        android:layout_marginRight="@dimen/dimen_10_dip"
        android:background="#eeeeee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_10_dip">

        <com.sx.trans.widget.font.LzTextView
            android:id="@+id/ll_accident_normal"

            android:layout_marginLeft="@dimen/dimen_10_dip"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/material_black"
            android:singleLine="true"

            android:textSize="15sp"
            android:text="一般事故" />

        <com.sx.trans.widget.font.LzTextView
            android:id="@+id/ll_accident_handling"
            style="@style/Ledger_Text_Style_second_HW"
            android:gravity="center_horizontal|right"
            android:text="未处理" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_8_dip"
        android:background="#ececec" />
</LinearLayout>
