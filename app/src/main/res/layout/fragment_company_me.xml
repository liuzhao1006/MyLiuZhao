<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ececec"
    android:orientation="vertical">


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_191_dip"
        android:background="@drawable/shape_head_background"
        android:gravity="center"
        android:orientation="horizontal"

        tools:ignore="DisableBaselineAlignment">

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_20_dip"
                android:layout_marginTop="@dimen/dimen_50_dip"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_myIcon"
                    android:layout_width="86dp"
                    android:layout_height="86dp"

                    android:src="@drawable/my_nor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_100_dip"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <com.sx.trans.widget.font.LzTextView
                        android:id="@+id/ltv_userName"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="@dimen/dimen_40_dip"
                        android:layout_weight="1.8  "
                        android:gravity="center_vertical"
                        android:text="张德万"
                        android:textColor="#fff"
                        android:textSize="18sp" />

                    <com.sx.trans.widget.font.LzTextView
                        android:id="@+id/ltv_Place"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="@dimen/dimen_40_dip"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="职位: 安全主管"
                        android:textColor="#fff"
                        android:textSize="11sp" />

                    <com.sx.trans.widget.font.LzTextView
                        android:id="@+id/ltv_Tel"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="@dimen/dimen_40_dip"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="电话: 18765432323"
                        android:textColor="#fff"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_SpecialExercise"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60_dip"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dimen_30_dip"
            android:layout_height="@dimen/dimen_30_dip"
            android:layout_marginLeft="@dimen/dimen_20_dip"
            android:layout_marginRight="@dimen/dimen_10_dip"
            android:scaleType="fitXY"
            android:src="@drawable/safelearning" />

        <com.sx.trans.widget.font.LzTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="专项学习"
            android:textColor="#333333"
            android:textSize="17sp" />

        <ImageView

            android:layout_width="7dp"
            android:layout_height="12dp"
            android:layout_marginRight="@dimen/dimen_10_dip"
            android:src="@drawable/right"

            tools:ignore="ContentDescription" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"

        android:background="#ececec" />

    <LinearLayout
        android:id="@+id/ll_SafetyResponsibilityAgreement"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60_dip"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dimen_30_dip"
            android:layout_height="@dimen/dimen_30_dip"
            android:layout_marginLeft="@dimen/dimen_20_dip"
            android:layout_marginRight="@dimen/dimen_10_dip"
            android:scaleType="fitXY"
            android:src="@drawable/policyinformation03" />

        <com.sx.trans.widget.font.LzTextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="安全责任书"
            android:textColor="#333333"
            android:textSize="17sp" />

        <ImageView

            android:layout_width="7dp"
            android:layout_height="12dp"
            android:layout_marginRight="@dimen/dimen_10_dip"
            android:src="@drawable/right"

            tools:ignore="ContentDescription" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"

        android:background="#ececec" />

    <LinearLayout
        android:id="@+id/ll_MailboxProcessing"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60_dip"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dimen_30_dip"
            android:layout_height="@dimen/dimen_30_dip"
            android:layout_marginLeft="@dimen/dimen_20_dip"
            android:layout_marginRight="@dimen/dimen_10_dip"
            android:scaleType="fitXY"
            android:src="@drawable/mailboxprocessing" />

        <com.sx.trans.widget.font.LzTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="信箱处理"
            android:textColor="#333333"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="7dp"
            android:layout_height="12dp"
            android:layout_marginRight="@dimen/dimen_10_dip"
            android:src="@drawable/right" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"

        android:background="#ececec" />

    <LinearLayout
        android:id="@+id/ll_AdvertiseMessage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60_dip"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dimen_30_dip"
            android:layout_height="@dimen/dimen_30_dip"
            android:layout_marginLeft="@dimen/dimen_20_dip"
            android:layout_marginRight="@dimen/dimen_10_dip"
            android:scaleType="fitXY"
            android:src="@drawable/announcementnews" />

        <com.sx.trans.widget.font.LzTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="公告消息"
            android:textColor="#333333"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="7dp"
            android:layout_height="12dp"
            android:layout_marginRight="@dimen/dimen_10_dip"
            android:src="@drawable/right" />
    </LinearLayout>

    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"

        android:background="#ececec" />

    <LinearLayout
        android:id="@+id/ll_usingHelp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60_dip"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dimen_30_dip"
            android:layout_height="@dimen/dimen_30_dip"
            android:layout_marginLeft="@dimen/dimen_20_dip"
            android:layout_marginRight="@dimen/dimen_10_dip"
            android:scaleType="fitXY"
            android:src="@drawable/usehelp" />

        <com.sx.trans.widget.font.LzTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="使用帮助"
            android:textColor="#333333"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="7dp"
            android:layout_height="12dp"
            android:layout_marginRight="@dimen/dimen_10_dip"
            android:src="@drawable/right" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"

        android:background="#ececec" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dimen_60_dip"
        android:background="#ececec">

    <Button
        android:id="@+id/bt_outButton"
        android:layout_width="@dimen/dimen_360_dip"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/select_query_bg"
        android:gravity="center"
        android:text="退          出"
        android:textColor="#ffffff"
        android:textSize="17sp"/>
    </RelativeLayout>
</LinearLayout>


