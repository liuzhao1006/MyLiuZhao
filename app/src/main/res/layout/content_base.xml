<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:civ="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sx.trans.base.BaseActivity"
    tools:showIn="@layout/activity_login">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@android:color/transparent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="@dimen/dimen_130_dip"
                android:layout_height="@dimen/dimen_130_dip"
                android:src="@drawable/icon" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/transparent" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_login_name"
            android:layout_width="257dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10_dip"
            android:layout_marginRight="@dimen/dimen_10_dip"
            android:background="@null"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="8dp"
            android:hint="用户名"
            android:imeOptions="actionNext"
            android:marqueeRepeatLimit="marquee_forever"

            android:textColor="@color/material_secondary_text"
            android:textSize="20sp" />

        <View
            android:layout_width="257dp"
            android:layout_height="@dimen/dimen_1_dip"
            android:layout_gravity="center_horizontal"
            android:background="#ececec" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_login_password"
            android:layout_width="257dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10_dip"
            android:layout_marginRight="@dimen/dimen_10_dip"
            android:layout_marginTop="@dimen/dimen_10_dip"
            android:background="@null"
            android:drawableLeft="@drawable/password"
            android:drawablePadding="8dp"
            android:hint="密码"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="1"

            android:textColor="@color/material_secondary_text"
            android:textSize="20sp" />

        <View
            android:layout_width="257dp"
            android:layout_height="@dimen/dimen_1_dip"
            android:layout_gravity="center_horizontal"
            android:background="#ececec" />

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="254dp"
            android:layout_height="39dp"
            android:layout_marginLeft="@dimen/dimen_30_dip"
            android:layout_marginRight="@dimen/dimen_30_dip"
            android:layout_marginTop="@dimen/dimen_10_dip"
            android:background="@drawable/select_query_bg"
            android:gravity="center"
            android:text="登录"
            android:textColor="#ffffff"
            android:textSize="15sp" />


        <com.sx.trans.widget.font.LzTextView
            android:id="@+id/tv_login_findlogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_30_dip"
            android:gravity="center_horizontal"
            android:paddingTop="5dp"
            android:text="若忘记密码，请联系系统管理员找回或重置！"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_10_dip" />
    </android.support.v7.widget.LinearLayoutCompat>


</android.support.constraint.ConstraintLayout>
