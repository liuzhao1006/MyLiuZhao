<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/view_line"
    android:orientation="vertical">

    <include layout="@layout/include_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_100_dip"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_10_dip">

        <ImageView
            android:id="@+id/im"
            android:layout_width="@dimen/dimen_65_dip"
            android:layout_height="@dimen/dimen_65_dip"
            android:src="@drawable/man" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_30_dip"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:textColor="#333333"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/im_gender"
                    android:layout_width="@dimen/dimen_25_dip"
                    android:layout_height="@dimen/dimen_25_dip"
                    android:src="@drawable/man" />
            </LinearLayout>

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="110"
                android:textColor="#333333"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dip"
        android:background="#eeeeee" />

    <LinearLayout style="@style/linearlayoutlearn">

        <com.sx.trans.widget.font.LzTextView
            style="@style/lztextview"
            android:gravity="center_vertical"
            android:text="出生年月" />

        <com.sx.trans.widget.font.LzTextView
            android:id="@+id/ltv_birthiday"
            style="@style/lztextview_content"
            android:gravity="center_vertical|right"
            android:text="事故分类" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dip"
        android:background="#eeeeee" />

    <LinearLayout style="@style/linearlayoutlearn">

        <com.sx.trans.widget.font.LzTextView
            style="@style/lztextview"
            android:gravity="center_vertical"
            android:text="身份证号码" />

        <com.sx.trans.widget.font.LzTextView
            android:id="@+id/ltv_idnumber"
            style="@style/lztextview_content"
            android:gravity="center_vertical|right"
            android:text="事故分类" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dip"
        android:background="#eeeeee" />

    <LinearLayout style="@style/linearlayoutlearn">

        <com.sx.trans.widget.font.LzTextView
            style="@style/lztextview"
            android:gravity="center_vertical"
            android:text="联系地址" />

        <com.sx.trans.widget.font.LzTextView
            android:id="@+id/ltv_address"
            style="@style/lztextview_content"
            android:gravity="center_vertical|right"
            android:text="事故分类" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dip"
        android:background="#eeeeee" />

    <LinearLayout style="@style/linearlayoutlearn">

        <com.sx.trans.widget.font.LzTextView
            style="@style/lztextview"
            android:gravity="center_vertical"
            android:text="从业证号" />

        <com.sx.trans.widget.font.LzTextView
            android:id="@+id/ltv_qualificationCode"
            style="@style/lztextview_content"
            android:gravity="center_vertical|right"
            android:text="事故分类" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dip"
        android:background="#eeeeee" />

    <LinearLayout style="@style/linearlayoutlearn">

        <com.sx.trans.widget.font.LzTextView
            style="@style/lztextview"
            android:gravity="center_vertical"
            android:text="准驾类型" />

        <com.sx.trans.widget.font.LzTextView
            android:id="@+id/ltv_drivetype"
            style="@style/lztextview_content"
            android:gravity="center_vertical|right"
            android:text="事故分类" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dip"
        android:background="#eeeeee" />

    <LinearLayout style="@style/linearlayoutlearn">

        <com.sx.trans.widget.font.LzTextView
            style="@style/lztextview"
            android:gravity="center_vertical"
            android:text="单位" />

        <com.sx.trans.widget.font.LzTextView
            android:id="@+id/ltv_company"
            style="@style/lztextview_content"
            android:gravity="center_vertical|right"
            android:text="事故分类" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dip"
        android:background="#eeeeee" />

    <LinearLayout style="@style/linearlayoutlearn">

        <com.sx.trans.widget.font.LzTextView
            style="@style/lztextview"
            android:gravity="center_vertical"
            android:text="资格证编号" />

        <com.sx.trans.widget.font.LzTextView
            android:id="@+id/ltv_certificate_number"
            style="@style/lztextview_content"
            android:gravity="center_vertical|right"
            android:text="事故分类" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dip"
        android:background="#eeeeee" />

    <LinearLayout style="@style/linearlayoutlearn">

        <com.sx.trans.widget.font.LzTextView
            style="@style/lztextview"
            android:gravity="center_vertical"
            android:text="行业名称" />

        <com.sx.trans.widget.font.LzTextView
            android:id="@+id/ltv_firm_name"
            style="@style/lztextview_content"
            android:gravity="center_vertical|right"
            android:text="事故分类" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dip"
        android:background="#eeeeee" />

    <LinearLayout style="@style/linearlayoutlearn">

        <com.sx.trans.widget.font.LzTextView
            style="@style/lztextview"
            android:gravity="center_vertical"
            android:text="发证日期" />

        <com.sx.trans.widget.font.LzTextView
            android:id="@+id/ltv_getdate"
            style="@style/lztextview_content"
            android:gravity="center_vertical|right"
            android:text="事故分类" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dip"
        android:background="#eeeeee" />

    <LinearLayout style="@style/linearlayoutlearn">

        <com.sx.trans.widget.font.LzTextView
            style="@style/lztextview"
            android:gravity="center_vertical"
            android:text="车牌号" />

        <com.sx.trans.widget.font.LzTextView
            android:id="@+id/ltv_license_number"
            style="@style/lztextview_content"
            android:gravity="center_vertical|right"
            android:text="事故分类" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60_dip"
        android:layout_marginTop="@dimen/dimen_40_dip"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_10_dip">

        <ImageView
            android:layout_width="@dimen/dimen_30_dip"
            android:layout_height="@dimen/dimen_30_dip"
            android:src="@drawable/vedio" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_30_dip"
            android:text="学习明细"
            android:textColor="#333333"
            android:textSize="15sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView

            android:layout_width="@dimen/dimen_25_dip"
            android:layout_height="@dimen/dimen_25_dip"
            android:src="@drawable/leftarrow" />
    </LinearLayout>
</LinearLayout>