<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/include1"
        layout="@layout/include_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dimen_10_dip"
        android:paddingLeft="@dimen/dimen_5_dip"
        android:paddingRight="@dimen/dimen_5_dip"
        android:paddingTop="@dimen/dimen_10_dip">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_60_dip"
            android:layout_marginLeft="@dimen/dimen_5_dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dimen_45_dip"
                android:layout_height="@dimen/dimen_45_dip"
                android:scaleType="fitXY"
                android:src="@drawable/vehicle" />

            <com.sx.trans.widget.font.LzTextView
                style="@style/Ledger_Text_Style"
                android:text="法律法规" />
        </LinearLayout>


        <com.sx.trans.widget.font.LzTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="right"
            android:padding="@dimen/dimen_10_dip"
            android:text="31分钟"
            android:textColor="@color/maintvno_bg"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_5_dip"
        android:background="@color/view_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dimen_10_dip"
        android:paddingLeft="@dimen/dimen_5_dip"
        android:paddingRight="@dimen/dimen_5_dip"
        android:paddingTop="@dimen/dimen_10_dip">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_60_dip"
            android:layout_marginLeft="@dimen/dimen_5_dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dimen_45_dip"
                android:layout_height="@dimen/dimen_45_dip"
                android:scaleType="fitXY"
                android:src="@drawable/caseanalysis" />

            <com.sx.trans.widget.font.LzTextView
                style="@style/Ledger_Text_Style"
                android:text="案例分析" />
        </LinearLayout>


        <com.sx.trans.widget.font.LzTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="right"
            android:padding="@dimen/dimen_10_dip"
            android:text="50分钟"
            android:textColor="@color/maintvno_bg"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_5_dip"
        android:background="@color/view_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dimen_10_dip"
        android:paddingLeft="@dimen/dimen_5_dip"
        android:paddingRight="@dimen/dimen_5_dip"
        android:paddingTop="@dimen/dimen_10_dip">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_60_dip"
            android:layout_marginLeft="@dimen/dimen_5_dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dimen_45_dip"
                android:layout_height="@dimen/dimen_45_dip"
                android:scaleType="fitXY"
                android:src="@drawable/securitylogo" />

            <com.sx.trans.widget.font.LzTextView
                style="@style/Ledger_Text_Style"
                android:text="安全标识" />
        </LinearLayout>


        <com.sx.trans.widget.font.LzTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="right"
            android:padding="@dimen/dimen_10_dip"
            android:text="75分钟"
            android:textColor="@color/maintvno_bg"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_5_dip"
        android:background="@color/view_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dimen_10_dip"
        android:paddingLeft="@dimen/dimen_5_dip"
        android:paddingRight="@dimen/dimen_5_dip"
        android:paddingTop="@dimen/dimen_10_dip">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_60_dip"
            android:layout_marginLeft="@dimen/dimen_5_dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dimen_45_dip"
                android:layout_height="@dimen/dimen_45_dip"
                android:scaleType="fitXY"
                android:src="@drawable/localregulationsandpolicies" />

            <com.sx.trans.widget.font.LzTextView
                style="@style/Ledger_Text_Style"
                android:text="地方法规政策" />
        </LinearLayout>


        <com.sx.trans.widget.font.LzTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="right"
            android:padding="@dimen/dimen_10_dip"
            android:text="43分钟"
            android:textColor="@color/maintvno_bg"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/view_line" />

</LinearLayout>