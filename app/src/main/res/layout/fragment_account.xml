<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <include
        android:id="@+id/title"
        layout="@layout/sl_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10_dip"
        android:orientation="horizontal">

        <com.sx.trans.widget.font.LzTextView
            android:id="@+id/enterprise_type"
            android:layout_width="@dimen/dimen_20_dip"
            android:layout_height="@dimen/dimen_20_dip"
            android:background="@drawable/shape_sl"
            android:gravity="center"
            android:textColor="@color/baise"
            android:textSize="16sp" />

        <com.sx.trans.widget.font.LzTextView
            android:id="@+id/schedule_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_5_dip"
            android:drawablePadding="@dimen/dimen_10_dip"
            android:gravity="center"
            android:text="全部"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_50_dip"
        android:gravity="center"
        android:orientation="vertical">

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChart1"
            android:layout_width="300dp"
            android:layout_height="300dp">

        </com.github.mikephil.charting.charts.PieChart>
    </LinearLayout>

</LinearLayout>
