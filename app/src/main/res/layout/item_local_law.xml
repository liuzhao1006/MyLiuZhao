<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_dm_learn_plan"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_10_dip"
    android:layout_marginTop="@dimen/dimen_10_dip"
    android:background="#fff"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50_dip"
        android:layout_marginBottom="@dimen/dimen_10_dip"
        android:layout_marginTop="@dimen/dimen_10_dip"
        android:background="#fff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.sx.trans.widget.font.LzTextView
            android:id="@+id/ltv_local_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10_dip"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="交通事故处理流程(2017年09月09日)"
            android:textColor="#656565"
            android:textSize="16sp" />

        <com.sx.trans.widget.font.LzTextView
            android:id="@+id/ltv_local_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10_dip"
            android:gravity="center_vertical"
            android:text="交通部"
            android:textColor="#656565"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_15_dip"
            android:src="@drawable/right" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_stop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_30_dip"
        android:orientation="horizontal"
        android:visibility="gone">

        <com.sx.trans.widget.font.LzTextView
            android:id="@+id/tv_stop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="重要提醒"
            android:textColor="@color/material_black"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>

