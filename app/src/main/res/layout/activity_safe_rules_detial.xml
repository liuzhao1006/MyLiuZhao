<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <include layout="@layout/include_top" />


    <com.sx.trans.widget.view.LzScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_70_dip"

                android:layout_marginRight="@dimen/dimen_10_dip"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_10_dip">

                <ImageView
                    android:layout_marginRight="@dimen/dimen_5_dip"
                    android:layout_width="@dimen/dimen_32_dip"
                    android:layout_height="@dimen/dimen_32_dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/localregulationsandpolicies" />

                <com.sx.trans.widget.font.LzTextView
                    android:id="@+id/tv_UseName"
                    style="@style/Ledger_Text_Style"
                    android:text="基本信息" />
            </LinearLayout>

            <View
                android:layout_marginRight="@dimen/dimen_10_dip"
                android:layout_marginLeft="@dimen/dimen_10_dip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:background="#eeeeee" />

            <LinearLayout style="@style/linearlayout">

                <com.sx.trans.widget.font.LzTextView
                    style="@style/lztextview"
                    android:gravity="center_vertical"
                    android:text="名称" />

                <com.sx.trans.widget.font.LzTextView
                    android:id="@+id/ltv_name"
                    style="@style/lztextview_content"
                    android:gravity="center_vertical|right"
                    android:text="名称" />

            </LinearLayout>

            <View
                android:layout_marginRight="@dimen/dimen_10_dip"
                android:layout_marginLeft="@dimen/dimen_47_dip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:background="#eeeeee" />

            <LinearLayout style="@style/linearlayout">

                <com.sx.trans.widget.font.LzTextView
                    style="@style/lztextview"
                    android:gravity="center_vertical"
                    android:text="文号" />

                <com.sx.trans.widget.font.LzTextView
                    android:id="@+id/ltv_type"
                    style="@style/lztextview_content"
                    android:gravity="center_vertical|right"
                    android:text="文号" />

            </LinearLayout>

            <View
                android:layout_marginRight="@dimen/dimen_10_dip"
                android:layout_marginLeft="@dimen/dimen_47_dip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:background="#eeeeee" />


            <LinearLayout style="@style/linearlayout">

                <com.sx.trans.widget.font.LzTextView
                    style="@style/lztextview"
                    android:gravity="center_vertical"
                    android:text="制度类别" />

                <com.sx.trans.widget.font.LzTextView
                    android:id="@+id/ltv_xingtai"
                    style="@style/lztextview_content"
                    android:gravity="center|right"
                    android:text="制度类别" />

            </LinearLayout>

            <View
                android:layout_marginRight="@dimen/dimen_10_dip"
                android:layout_marginLeft="@dimen/dimen_47_dip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:background="#eeeeee" />

            <LinearLayout style="@style/linearlayout">

                <com.sx.trans.widget.font.LzTextView
                    style="@style/lztextview"
                    android:gravity="center_vertical"
                    android:text="发布日期" />

                <com.sx.trans.widget.font.LzTextView
                    android:id="@+id/ltv_time"
                    style="@style/lztextview_content"
                    android:gravity="center|right"
                    android:text="发布日期" />

            </LinearLayout>

            <View
                android:layout_marginRight="@dimen/dimen_10_dip"
                android:layout_marginLeft="@dimen/dimen_47_dip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:background="#eeeeee" />


            <LinearLayout style="@style/linearlayout">

                <com.sx.trans.widget.font.LzTextView
                    style="@style/lztextview"
                    android:gravity="center_vertical"
                    android:text="所属机构" />

                <com.sx.trans.widget.font.LzTextView
                    android:id="@+id/ltv_address"
                    style="@style/lztextview_content"
                    android:gravity="center|right"
                    android:text="所属机构" />

            </LinearLayout>

            <View
                android:layout_marginRight="@dimen/dimen_10_dip"
                android:layout_marginLeft="@dimen/dimen_47_dip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:background="#eeeeee" />


            <LinearLayout style="@style/linearlayout">

                <com.sx.trans.widget.font.LzTextView
                    style="@style/lztextview"
                    android:gravity="center_vertical"
                    android:text="登记人" />

                <com.sx.trans.widget.font.LzTextView
                    android:id="@+id/ltv_sky"
                    style="@style/lztextview_content"
                    android:gravity="center|right"
                    android:text="登记人" />

            </LinearLayout>

            <View
                android:layout_marginRight="@dimen/dimen_10_dip"
                android:layout_marginLeft="@dimen/dimen_47_dip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:background="#eeeeee" />
            <LinearLayout style="@style/linearlayout">

                <com.sx.trans.widget.font.LzTextView
                    style="@style/lztextview"
                    android:gravity="center_vertical"
                    android:text="登记日期" />

                <com.sx.trans.widget.font.LzTextView
                    android:id="@+id/ltv_grade"
                    style="@style/lztextview_content"
                    android:gravity="center|right"
                    android:text="登记日期" />

            </LinearLayout>

            <View
                android:layout_marginRight="@dimen/dimen_10_dip"
                android:layout_marginLeft="@dimen/dimen_47_dip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:background="#eeeeee" />

            <LinearLayout style="@style/linearlayout">

                <com.sx.trans.widget.font.LzTextView
                    style="@style/lztextview"
                    android:gravity="center_vertical"
                    android:text="是否作废" />

                <com.sx.trans.widget.font.LzTextView
                    android:id="@+id/ltv_situation"
                    style="@style/lztextview_content"
                    android:gravity="center|right"
                    android:text="是否作废" />

            </LinearLayout>

            <View
                android:layout_marginRight="@dimen/dimen_10_dip"
                android:layout_marginLeft="@dimen/dimen_47_dip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:background="#eeeeee" />

            <LinearLayout style="@style/linearlayout">

                <com.sx.trans.widget.font.LzTextView
                    style="@style/lztextview"
                    android:gravity="center_vertical"
                    android:text="作废人" />

                <com.sx.trans.widget.font.LzTextView
                    android:id="@+id/ltv_lmzk"
                    style="@style/lztextview_content"
                    android:gravity="center|right"
                    android:text="作废人" />

            </LinearLayout>

            <View
                android:layout_marginRight="@dimen/dimen_10_dip"
                android:layout_marginLeft="@dimen/dimen_47_dip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:background="#eeeeee" />

            <LinearLayout style="@style/linearlayout">

                <com.sx.trans.widget.font.LzTextView
                    style="@style/lztextview"
                    android:gravity="center_vertical"
                    android:text="作废日期" />

                <com.sx.trans.widget.font.LzTextView
                    android:id="@+id/ltv_zjyy"
                    style="@style/lztextview_content"
                    android:gravity="center|right"
                    android:text="作废日期" />

            </LinearLayout>

            <View
                android:layout_marginRight="@dimen/dimen_10_dip"
                android:layout_marginLeft="@dimen/dimen_47_dip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:background="#eeeeee" />

            <LinearLayout style="@style/linearlayout">

                <com.sx.trans.widget.font.LzTextView
                    style="@style/lztextview"
                    android:gravity="center_vertical"
                    android:text="制度内容：" />

                <com.sx.trans.widget.font.LzTextView
                    android:id="@+id/ltv_jsy"
                    style="@style/lztextview_content"
                    android:gravity="center|right"
                    android:text="制度内容详情" />

            </LinearLayout>


            <View
                android:layout_marginRight="@dimen/dimen_10_dip"
                android:layout_marginLeft="@dimen/dimen_47_dip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:background="#eeeeee" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_70_dip"

                android:layout_marginRight="@dimen/dimen_10_dip"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_10_dip">
                <ImageView
                    android:id="@+id/fj"
                    android:layout_marginRight="@dimen/dimen_5_dip"
                    android:layout_width="@dimen/dimen_32_dip"
                    android:layout_height="@dimen/dimen_32_dip"
                    android:scaleType="fitXY"
                    android:visibility="gone"
                    android:src="@drawable/attachmentdownload" />

                <com.sx.trans.widget.font.LzTextView
                    android:id="@+id/ltv_down"
                    style="@style/lztextview"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="附件(点击下载):"
                    android:visibility="gone" />
                <com.sx.trans.widget.font.LzTextView
                    android:id="@+id/ltv_down_count"
                    style="@style/lztextview"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="-"
                    android:visibility="gone" />

            </LinearLayout>


            <View
                android:layout_marginRight="@dimen/dimen_10_dip"
                android:layout_marginLeft="@dimen/dimen_47_dip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1_dip"
                android:background="#eeeeee" />
        </LinearLayout>

    </com.sx.trans.widget.view.LzScrollView>

</LinearLayout>
