<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40_dip"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_5_dip">

        <TextView
            android:id="@+id/tv_mark_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="姓名" />

        <View
            android:layout_width="@dimen/dimen_1_dip"
            android:layout_height="match_parent"
            android:background="@color/view_line" />

        <TextView
            android:id="@+id/tv_mark_count"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="岗位" />

        <View
            android:layout_width="@dimen/dimen_1_dip"
            android:layout_height="match_parent"
            android:background="@color/view_line" />

        <TextView
            android:id="@+id/tv_mark_point"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="是否参会" />

        <View
            android:layout_width="@dimen/dimen_1_dip"
            android:layout_height="match_parent"
            android:background="@color/view_line" />

        <TextView
            android:id="@+id/tv_mark_company"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="所属机构" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_2_dip"
        android:background="@color/view_line" />

    <include layout="@layout/recycle_view" />
</LinearLayout>
