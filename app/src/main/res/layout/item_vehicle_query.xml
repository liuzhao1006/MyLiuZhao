<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_80_dip"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dimen_20_dip"
    android:paddingLeft="@dimen/dimen_10_dip"
    android:paddingRight="@dimen/dimen_10_dip"
    android:paddingTop="@dimen/dimen_20_dip">


    <com.sx.trans.widget.font.LzTextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="车牌号:"
        android:id="@+id/tv_veicle"
        android:textColor="@color/material_black"
        android:textSize="15sp" />

    <com.sx.trans.widget.font.LzTextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="陕A39547"
        android:textColor="@color/material_green_600"
        android:textSize="15sp" />


    <com.sx.trans.widget.font.LzTextView
        android:id="@+id/ltv_type"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|right"
        android:text="类型:"
        android:textColor="@color/material_black"
        android:textSize="15sp" />

    <com.sx.trans.widget.font.LzTextView
        android:id="@+id/tv_state"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|left"
        android:text="2017年09月29日"
        android:textColor="@color/material_green_600"
        android:textSize="15sp" />


</LinearLayout>