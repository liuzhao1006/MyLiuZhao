<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ececec"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/bank"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_191_dip"
        android:background="@drawable/shape_head_background"
        android:gravity="center"
        android:orientation="horizontal"
        tools:ignore="DisableBaselineAlignment">

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20_dip"
                android:layout_marginTop="@dimen/dimen_50_dip"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/img_myIcon"
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/vehicle" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_100_dip"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <com.sx.trans.widget.font.LzTextView
                        android:id="@+id/ltv_name"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="@dimen/dimen_40_dip"
                        android:layout_weight="1.8  "
                        android:gravity="center_vertical"
                        android:text="姓名"
                        android:textColor="#fff"
                        android:textSize="18sp" />

                    <com.sx.trans.widget.font.LzTextView
                        android:id="@+id/ltv_carpai"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="@dimen/dimen_40_dip"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="车牌号: 陕A12345"
                        android:textColor="#fff"
                        android:textSize="11sp" />

                    <com.sx.trans.widget.font.LzTextView
                        android:id="@+id/ltv_phone"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="@dimen/dimen_40_dip"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="电话: 18765432323"
                        android:textColor="#fff"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout

        android:id="@+id/ll_car_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60_dip"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_1"
            android:layout_width="@dimen/dimen_30_dip"
            android:layout_height="@dimen/dimen_30_dip"
            android:layout_marginLeft="@dimen/dimen_20_dip"
            android:layout_marginRight="@dimen/dimen_10_dip"
            android:scaleType="fitXY"
            android:src="@drawable/vehicleinformation01" />

        <com.sx.trans.widget.font.LzTextView
            android:id="@+id/text1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="车辆信息"
            android:textColor="#333333"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/imgin_1"
            android:layout_width="7dp"
            android:layout_height="12dp"
            android:layout_marginRight="@dimen/dimen_10_dip"
            android:src="@drawable/right"

            tools:ignore="ContentDescription" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"

        android:background="#ececec" />

    <LinearLayout
        android:id="@+id/ll_policy_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60_dip"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_2"
            android:layout_width="@dimen/dimen_30_dip"
            android:layout_height="@dimen/dimen_30_dip"
            android:layout_marginLeft="@dimen/dimen_20_dip"
            android:layout_marginRight="@dimen/dimen_10_dip"
            android:scaleType="fitXY"
            android:src="@drawable/safetyliability" />

        <com.sx.trans.widget.font.LzTextView
            android:id="@+id/text2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="保单信息"
            android:textColor="#333333"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/imgin_2"
            android:layout_width="7dp"
            android:layout_height="12dp"
            android:layout_marginRight="@dimen/dimen_10_dip"
            android:src="@drawable/right"

            tools:ignore="ContentDescription" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"

        android:background="#ececec" />

    <LinearLayout
        android:id="@+id/ll_leadership_mailbox_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60_dip"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dimen_30_dip"
            android:layout_height="@dimen/dimen_30_dip"
            android:layout_marginLeft="@dimen/dimen_20_dip"
            android:layout_marginRight="@dimen/dimen_10_dip"
            android:scaleType="fitXY"
            android:src="@drawable/mailboxprocessing" />

        <com.sx.trans.widget.font.LzTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="领导信箱"
            android:textColor="#333333"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="7dp"
            android:layout_height="12dp"
            android:layout_marginRight="@dimen/dimen_10_dip"
            android:src="@drawable/right" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"

        android:background="#ececec" />

    <LinearLayout
        android:id="@+id/ll_student_wodebaomingyixiang"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60_dip"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dimen_30_dip"
            android:layout_height="@dimen/dimen_30_dip"
            android:layout_marginLeft="@dimen/dimen_20_dip"
            android:layout_marginRight="@dimen/dimen_10_dip"
            android:scaleType="fitXY"
            android:src="@drawable/announcementnews" />

        <com.sx.trans.widget.font.LzTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="通知消息"
            android:textColor="#333333"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="7dp"
            android:layout_height="12dp"

            android:layout_marginRight="@dimen/dimen_10_dip"
            android:src="@drawable/right" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"

        android:background="#ececec" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60_dip"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dimen_30_dip"
            android:layout_height="@dimen/dimen_30_dip"
            android:layout_marginLeft="@dimen/dimen_20_dip"
            android:layout_marginRight="@dimen/dimen_10_dip"
            android:scaleType="fitXY"
            android:src="@drawable/usehelp" />

        <com.sx.trans.widget.font.LzTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="使用帮助"
            android:textColor="#333333"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="7dp"
            android:layout_height="12dp"


            android:layout_marginRight="@dimen/dimen_10_dip"
            android:src="@drawable/right" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"

        android:background="#ececec" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dimen_60_dip"
        android:background="#ececec">

        <Button
            android:id="@+id/bt_myoutbutton"
            android:layout_width="@dimen/dimen_360_dip"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/select_query_bg"
            android:gravity="center"
            android:text="退          出"
            android:textColor="#ffffff"
            android:textSize="17sp" />
    </RelativeLayout>
</LinearLayout>


