<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/include_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20_dip"
        android:layout_marginBottom="@dimen/dimen_10_dip"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.sx.trans.widget.font.LzTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10_dip"
            android:layout_marginRight="@dimen/dimen_30_dip"
            android:gravity="center_vertical"
            android:text="报警"
            android:textSize="16sp" />


        <LinearLayout
            android:id="@+id/ll_alarm_cur"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.sx.trans.widget.font.LzTextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30_dip"
                android:layout_marginLeft="@dimen/dimen_10_dip"
                android:gravity="center"
                android:text="当天"
                android:textColor="#999999"
                android:textSize="15sp"

                />

            <com.sx.trans.widget.font.LzTextView
                android:id="@+id/ltv_fragment_home_currentday"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30_dip"
                android:layout_marginLeft="@dimen/dimen_10_dip"
                android:gravity="center"
                android:text="-"
                android:textColor="#64cf7b"
                android:textSize="12sp"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_alarm_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.sx.trans.widget.font.LzTextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30_dip"
                android:layout_marginLeft="@dimen/dimen_10_dip"
                android:gravity="center"
                android:text="未处理"
                android:textColor="#999999"
                android:textSize="15sp"


                />

            <com.sx.trans.widget.font.LzTextView
                android:id="@+id/ltv_fragment_home_no"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30_dip"
                android:layout_marginLeft="@dimen/dimen_10_dip"
                android:gravity="center"
                android:text="-"
                android:textColor="#ff0000"
                android:textSize="12sp"

                />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_alarm_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_20_dip"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.sx.trans.widget.font.LzTextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30_dip"
                android:layout_marginLeft="@dimen/dimen_10_dip"
                android:gravity="center"
                android:text="总次数"
                android:textColor="#999999"
                android:textSize="15sp"

                />

            <com.sx.trans.widget.font.LzTextView
                android:id="@+id/ltv_fragment_home_count"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30_dip"
                android:layout_marginLeft="@dimen/dimen_10_dip"
                android:gravity="center"
                android:text="-"
                android:textColor="#64cf7b"
                android:textSize="12sp"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dimen_50_dip"
            android:layout_height="match_parent"></LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_10_dip"
        android:background="@color/view_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_135_dip"


            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_student_accident"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dimen_40_dip"
                    android:layout_height="@dimen/dimen_40_dip"
                    android:gravity="center"
                    android:src="@drawable/accident04" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:text="事故"
                    android:textColor="#666666"
                    android:textSize="15sp" />


            </LinearLayout>


            <View
                android:layout_width="@dimen/dimen_1_dip"
                android:layout_height="match_parent"
                android:background="#ececec" />

            <LinearLayout
                android:id="@+id/ll_student_year_careful"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dimen_40_dip"
                    android:layout_height="@dimen/dimen_40_dip"
                    android:gravity="center"
                    android:src="@drawable/limited" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:text="年审"
                    android:textColor="#666666"
                    android:textSize="15sp" />


            </LinearLayout>


            <View
                android:layout_width="@dimen/dimen_1_dip"
                android:layout_height="match_parent"
                android:background="#ececec" />

            <LinearLayout
                android:id="@+id/ll_student_maintenance"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dimen_40_dip"
                    android:layout_height="@dimen/dimen_40_dip"
                    android:gravity="center"
                    android:src="@drawable/maintain03" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:text="维护"
                    android:textColor="#666666"
                    android:textSize="15sp" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_20_dip"
        android:background="@color/view_line" />

    <FrameLayout
        android:id="@+id/fl_pie"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/ref_rlv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/view_line">

            <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
                android:id="@+id/rlv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@color/view_line"
                android:scrollbars="vertical" />

        </android.support.v4.widget.SwipeRefreshLayout>

        <ImageView
            android:id="@+id/iv_pie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/default01"
            android:visibility="gone" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/view_line" />

</LinearLayout>