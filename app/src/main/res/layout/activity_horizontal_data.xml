<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/bt_date_left"
        android:layout_width="50dp"
        android:layout_height="60dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/date_left" />
    </RelativeLayout>
    />
    <!--日期选择栏-->
    <com.sx.trans.supervision.widget.HorizontalListView
        android:id="@+id/horizontallist"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp" />

    <RelativeLayout
        android:id="@+id/bt_date_right"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/date_right" />
    </RelativeLayout>
</RelativeLayout>
