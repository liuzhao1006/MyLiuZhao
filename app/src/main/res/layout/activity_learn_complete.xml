<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/view_line"
    android:orientation="vertical">

    <include layout="@layout/include_top" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dimen_10_dip"

            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_60_dip"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="姓名"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <View
                    android:layout_width="@dimen/dimen_1_dip"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dimen_5_dip"
                    android:layout_marginTop="@dimen/dimen_5_dip"
                    android:background="@color/maintvyes_bg" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="性别"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <View
                    android:layout_width="@dimen/dimen_1_dip"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dimen_5_dip"
                    android:layout_marginTop="@dimen/dimen_5_dip"
                    android:background="@color/maintvyes_bg" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="手机"
                    android:textColor="@color/black"
                    android:textSize="16sp" />


            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <include layout="@layout/recycle_view" />

                <ImageView
                    android:id="@+id/iv_pie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/default01"
                     />

            </FrameLayout>
        </LinearLayout>

</LinearLayout>
